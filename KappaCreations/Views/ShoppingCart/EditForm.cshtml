@using KappaCreations.Models.ViewModels;

@{
    ViewBag.Title = "CheckoutForm";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>




        .billing-form .row {
            display: -ms-flexbox; /* IE10 */
            display: flex;
            -ms-flex-wrap: wrap; /* IE10 */
            flex-wrap: wrap;
            margin: 0 -16px;
        }

        .billing-form .col-25 {
            -ms-flex: 25%; /* IE10 */
            flex: 25%;
        }

        .billing-form .col-50 {
            -ms-flex: 50%; /* IE10 */
            flex: 50%;
        }

        .billing-form .col-75 {
            -ms-flex: 75%; /* IE10 */
            flex: 75%;
        }

        .billing-form .col-25,
        .col-50,
        .col-75 {
            padding: 0 16px;
        }

        .billing-form .container {
            background-color: #f2f2f2;
            padding: 5px 20px 15px 20px;
            border: 1px solid lightgrey;
            border-radius: 3px;
        }

        .billing-form input[type=text] {
            width: 100%;
            margin-bottom: 20px;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .billing-form label {
            margin-bottom: 10px;
            display: block;
        }

        .billing-form .icon-container {
            margin-bottom: 20px;
            padding: 7px 0;
            font-size: 24px;
        }

        .billing-form .btn {
            background-color: #16ACB8;
            color: white;
            padding: 12px;
            margin: 10px 0;
            border: none;
            width: 100%;
            border-radius: 3px;
            cursor: pointer;
            font-size: 17px;
        }

            .billing-form .btn:hover {
                background-color: #f2f2f2;
                color: #16ACB8;
            }


        .billing-form #edit {
            background-color: seagreen;
            color: white;
            padding: 12px;
            margin: 10px 0;
            border: none;
            width: 100%;
            border-radius: 3px;
            cursor: pointer;
            font-size: 17px;
        }

            .billing-form #edit:hover {
                background-color: #f2f2f2;
                color: #16ACB8;
            }

        .billing-form a {
            color: #2196F3;
        }

        .billing-form hr {
            border: 1px solid lightgrey;
        }

        .billing-form span.price {
            float: right;
            color: grey;
        }

        /* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other (also change the direction - make the "cart" column go on top) */
        @@media (max-width: 800px) {
            .billing-form .row {
                flex-direction: column-reverse;
            }

            .billing-form .col-25 {
                margin-bottom: 20px;
            }
        }
    </style>
</head>



<body>
    <div class="billing-form">
        <div class="row">
            <div class="col-75">
                <div class="container">
                    <form action="/action_page.php">

                        <div class="row">
                            <div class="col-50">
                                <h3>Billing Address</h3>
                                <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                                <input type="text" id="fname" name="fullname" value="" ">
                                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                                <input type="text" id="email" name="email" value="">
                                <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                                <input type="text" id="adr" name="address" value="">
                                <label for="city"><i class="fa fa-institution"></i> City</label>
                                <input type="text" id="city" name="city" value="">

                                <div class="row">
                                    <div class="col-50">
                                        <label for="zip">Zip</label>
                                        <input type="text" id="zip" name="zip" value="">
                                    </div>
                                </div>
                            </div>

                            <div class="col-50">
                                <h3>Payment</h3>
                                <label for="fname">Accepted Cards</label>
                                <div class="icon-container">
                                    <i class="fa fa-cc-visa" style="color:navy;"></i>
                                    <i class="fa fa-cc-amex" style="color:blue;"></i>
                                    <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                    <i class="fa fa-cc-discover" style="color:orange;"></i>
                                </div>
                                <label for="cname">Name on Card</label>
                                <input type="text" id="cname" name="cardname" value="">
                                <label for="ccnum">Credit card number</label>
                                <input type="text" id="ccnum" name="cardnumber" value="">
                                <label for="expmonth">Exp Month</label>
                                <input type="text" id="expmonth" name="expmonth" value="">
                                <div class="row">
                                    <div class="col-50">
                                        <label for="expyear">Exp Year</label>
                                        <input type="text" id="expyear" name="expyear" value="">
                                    </div>
                                    <div class="col-50">
                                        <label for="cvv">CVV</label>
                                        <input type="text" id="cvv" name="cvv" value="">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <button id="order">geia xaradra</button>
                        <a id="payment" href="@Url.Action("PaymentWithPaypal","ShoppingCart")" class="btn">Pay with PayPal</a> 
                    </form>
                </div>
            </div>
            <div class="col-25">
                <div class="container">
                    <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> </span></h4>
                    @{double sum = 0; }
                    @foreach (CartItem item in (List<CartItem>)Session["cart"])
                    {
                        <p> @item.Product.Category.Title x @item.Quantity <span class="price">@item.Product.Category.Price€</span></p>
                        sum += @item.Product.Category.Price * @item.Quantity;
                    } 
                    <hr>
                    <p>Total <span class="price" style="color:black"><b>@sum€</b></span></p>
                </div>
            </div>
        </div>
    </div> 
    @Scripts.Render("~/probeautyfly/js/ShoppingCart.js") 
</body>
</html>


