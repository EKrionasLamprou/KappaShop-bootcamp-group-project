<body class="cbp-spmenu-push">
    <div id="page">


        <section class="single-blog-block section-padding-small">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="single-blog-image">
                            <img class="img-responsive" src="~/probeautyfly/images/ashtray.png" alt="product image" style="max-width:35%; max-height:35%">
                        </div>
                        <div class="single-blog-desc">
                            <h3>Description</h3>

                            <div class="blog-views">
                                <!-- Left-aligned -->
                                <div class="media">
                                    <div class="media-body">
                                        <h4 class="media-heading event-title"> Product</h4>
                                    </div>
                                </div>
                            </div>
                            <p class="p_bq margin-t20"><i class="fa fa-tags"></i>Category: Ashtray | Created by: User Name | Price: 7 euros</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="feedback-list">
                            <h4><i class="fa fa-comments-o fa-lg"></i>Comments</h4>
                            <div class="media response-info">
                                <div class="media-left response-text-left">
                                    <a href="#">
                                        <img alt="" src="images/client1-1.png" class="media-object">
                                    </a>
                                    <h5><a href="#">Fritz Wold</a></h5>
                                </div>
                                <div class="media-body response-text-right">
